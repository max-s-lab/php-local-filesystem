{
    "name": "max-s-lab/php-local-filesystem",
    "description": "A package for convenient work with local filesystem.",
    "keywords": [
        "filesystem",
        "filesystems",
        "file",
        "files",
        "directory",
        "directories"
    ],
    "type": "library",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
        {
            "name": "Maksim Sprikov",
            "email": "spirkov.2001@mail.ru"
        }
    ],
    "scripts": {
        "lint:check": "./vendor/bin/php-cs-fixer check",
        "lint:fix": "./vendor/bin/php-cs-fixer fix",
        "phpstan:analyse": "./vendor/bin/phpstan analyse ."
    },
    "require": {
        "php": ">=7.4",
        "ext-fileinfo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "friendsofphp/php-cs-fixer": "^3.75",
        "phpro/grumphp": "^1.13",
        "phpstan/phpstan": "^2.1",
        "tomasvotruba/type-coverage": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "MaxSLab\\Filesystem\\Local\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MaxSLab\\Filesystem\\Local\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true
        }
    }
}
